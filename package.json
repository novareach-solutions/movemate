{
  "name": "@movemate/movemate",
  "version": "1.0.0",
  "repository": "https://github.com/novareach-solutions/movemate.git",
  "author": "novareach-solutions",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/backend/*",
    "apps/frontend/web/admin"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.15.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "scripts": {
    "lint": "eslint \"apps/frontend/**/*.{ts,tsx}\" --fix",
    "lint:backend": "cd apps/backend/backend-main && yarn lint",
    "prettier": "prettier --write 'apps/**/*.{ts,tsx,json,css,scss,md}' 'shared/**/*.{ts,tsx,json,css,scss,md}'",
    "tsc": "tsc --noEmit --project tsconfig.json",
    "validate": "yarn run prettier && yarn run lint:backend",
    "commit": "git-cz",
    "prepare": "husky",
    "install:all": "yarn install --frozen-lockfile",
    "build": "yarn workspaces foreach run build",
    "test": "yarn workspaces foreach run test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "eslint": "^9.15.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-perfectionist": "^4.0.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "typescript-eslint": "^8.15.0"
  }
}